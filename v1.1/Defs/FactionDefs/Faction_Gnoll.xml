<Defs>

<FactionDef>
	<defName>GnollBrotherhood</defName>
	<label>Gnoll Brotherhood</label>
    <description>An atypical group of Gnolls, banded together to form a decent colony. Known moreso as the Brotherhood clans, these Gnolls turned more towards mercenary work to survive on the Rim; offering assistance in tracking, hunting and protection for food and silver.</description>
	<colorSpectrum>
		<li>(127,255,0)</li>
		<li>(255,127,80)</li>
    </colorSpectrum>
	<pawnsPlural>gnolls</pawnsPlural>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
	<settlementGenerationWeight>1</settlementGenerationWeight>
    <canMakeRandomly>true</canMakeRandomly>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>Clan Keeper</leaderTitle>
    <startingGoodwill>
		<min>-50</min>
		<max>40</max>
    </startingGoodwill>
	<factionNameMaker>NamerFactionGnoll</factionNameMaker>
	<settlementNameMaker>NamerFactionGnollBase</settlementNameMaker>
	<techLevel>Medieval</techLevel>
	<backstoryCategories>
		<li>GnollBackstory</li>
		<li>GnollTribalBackstory</li>
  	</backstoryCategories>
		<hairTags>
			<li>GnollHair</li>
		</hairTags>
    <naturalColonyGoodwill>
		<min>-60</min>
		<max>0</max>
    </naturalColonyGoodwill>
    <visitorTraderKinds>
		<li>Visitor_Neolithic_Standard</li>
    </visitorTraderKinds>
	<caravanTraderKinds>
        <li>Base_Gnoll_OrganTrader</li>
		<li>Caravan_Neolithic_BulkGoods</li>
		<li>Caravan_Neolithic_WarMerchant</li>
		<li>Caravan_Neolithic_ShamanMerchant</li>
		<li>Caravan_Neolithic_Slaver</li>
		<li>Caravan_Outlander_PirateMerchant</li>
	</caravanTraderKinds>
    <baseTraderKinds>
		<li>Base_Neolithic_Standard</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>
		<min>-10</min>
		<max>55</max>
    </allowedArrivalTemperatureRange>
    <maxPawnCostPerTotalPointsCurve>
		<points>
			<li>(0,35)</li>
			<li>(70, 50)</li>
			<li>(700, 100)</li>
			<li>(1300, 150)</li>
			<li>(100000, 10000)</li>
		</points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
		<li>
			<kindDef>Combat</kindDef>
				<options>
				<GnollScavenger>50</GnollScavenger>
				<GnollPackLeader>250</GnollPackLeader>
				<GnollRecruit>100</GnollRecruit>
				<GnollHunter>130</GnollHunter>
				<GnollTracker>130</GnollTracker>
				<GnollRanger>170</GnollRanger>
				</options>
		</li>
		<li>
			<kindDef>Peaceful</kindDef>
				<options>
				<GnollScavenger>50</GnollScavenger>
				<GnollTracker>90</GnollTracker>
				<GnollPackLeader>250</GnollPackLeader>
				<GnollRecruit>100</GnollRecruit>
				<GnollHunter>130</GnollHunter>
			</options>
		</li>
		<li>
			<kindDef>Trader</kindDef>
				<traders>
				<GnollTrader>1</GnollTrader>
				</traders>
				<carriers>
				<Muffalo>2</Muffalo>
				<Dromedary>2</Dromedary>
				</carriers>
				<guards>
				<GnollTracker>90</GnollTracker>
				<GnollRecruit>100</GnollRecruit>
				<GnollHunter>130</GnollHunter>
				<GnollSentinel>130</GnollSentinel>
				</guards>
		</li>
		<li>
				<kindDef>Settlement</kindDef>
				<options>
				<GnollScavenger>50</GnollScavenger>
				<GnollTracker>90</GnollTracker>
				<GnollPackLeader>250</GnollPackLeader>
				<GnollRecruit>100</GnollRecruit>
				<GnollHunter>130</GnollHunter>
				<GnollSentinel>130</GnollSentinel>
				<GnollRanger>170</GnollRanger>
				</options>
		</li>
	</pawnGroupMakers>
    <settlementTexturePath>World/GnollBaseIcon</settlementTexturePath>
	<factionIconPath>World/GnollBaseIcon</factionIconPath>
