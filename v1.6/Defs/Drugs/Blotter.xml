<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="MakeableDrugPillBase">
    <defName>Blotter</defName>
    <label>blotter</label>
    <description>A harmless piece of paper that puts the user on a different plane of existence. Whilst the high is generally a pleasant one for the user, it does have a tendancy to make users forget what they're doing, then who they are, and what they're really doing here. They will then wander around in a daze until they come to their senses again. It's like giving your colonists a little holiday from the harsh realities of their existence.</description>
    <graphicData>
      <texPath>Things/Item/Drug/Blotter</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>900</WorkToMake>
      <MarketValue>335</MarketValue>
      <Mass>0.005</Mass>
    </statBases>
    <techLevel>Industrial</techLevel>
    <ingestible>
      <joyKind>Chemical</joyKind>
      <joy>1.40</joy>
      <drugCategory>Hard</drugCategory>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>BlotterHigh</hediffDef>
          <severity>0.75</severity>
          <toleranceChemical>Blotter</toleranceChemical>
        </li>
        <li Class="IngestionOutcomeDoer_OffsetNeed">
          <need>Rest</need>
          <offset>1.0</offset>
          <toleranceChemical>Blotter</toleranceChemical>
        </li>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>BlotterTolerance</hediffDef>
          <severity>0.045</severity>
					<divideByBodySize>true</divideByBodySize>
				</li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
			<researchPrerequisite>BlotterProduction</researchPrerequisite>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
      <bulkRecipeCount>4</bulkRecipeCount>
    </recipeMaker>
    <costList>
      <Neutroamine>6</Neutroamine>
      <Yayo>8</Yayo>
      <Silver>2</Silver>
    </costList>
    <comps>
      <li Class="CompProperties_Drug">
        <chemical>Blotter</chemical>
        <addictiveness>0.0001</addictiveness>
        <minToleranceToAddict>0.98</minToleranceToAddict>
        <existingAddictionSeverityOffset>0.20</existingAddictionSeverityOffset>
        <needLevelOffset>1</needLevelOffset>
        <listOrder>210</listOrder>
        <overdoseSeverityOffset>
          <min>0.18</min>
          <max>0.35</max>
        </overdoseSeverityOffset>
				<largeOverdoseChance>0.01</largeOverdoseChance>
			</li>
    </comps>
  </ThingDef>
  


  <HediffDef>
    <defName>BlotterHigh</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <description>So many colours and perspectives. I'm blown away by the most simple things.</description>
    <label>high on blotter paper</label>
    <labelNoun>a trip</labelNoun>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1.5</severityPerDay>
      </li>
    </comps>
      <stages>
        <li>
          <restFallFactor>0.8</restFallFactor>
          <capMods>
            <li>
              <capacity>Consciousness</capacity>
              <offset>-0.5</offset>
            </li>
            <li>
              <capacity>Moving</capacity>
              <offset>-0.1</offset>
            </li>
          </capMods>
          <mentalStateGivers>
          <li>
            <mentalState>Wander_Psychotic</mentalState>
            <mtbDays>0.1</mtbDays>
          </li>
        </mentalStateGivers>
          <statOffsets>
            <WorkSpeedGlobal>0.5</WorkSpeedGlobal>
          </statOffsets>
          <hediffGivers>
            <li Class="HediffGiver_Random">
              <hediff>HeartAttack</hediff>
              <mtbDays>120</mtbDays>
              <partsToAffect>
                <li>Heart</li>
              </partsToAffect>
            </li>
          </hediffGivers>
        </li>
      </stages>
  </HediffDef>
  
  <!-- Blotter addiction -->
  
  <ChemicalDef>
    <defName>Blotter</defName>
    <label>blotter</label>
    <addictionHediff>BlotterAddiction</addictionHediff>
    <toleranceHediff>BlotterTolerance</toleranceHediff>
		<onGeneratedAddictedToleranceChance>0</onGeneratedAddictedToleranceChance>
	</ChemicalDef>
  
  <NeedDef ParentName="DrugAddictionNeedBase">
    <defName>Chemical_Blotter</defName>
    <needClass>Need_Chemical</needClass>
    <label>blotter</label>
    <description>Because of an blotter addiction, this person needs to regularly consume the drug to avoid withdrawal symptoms.</description>
    <listPriority>40</listPriority>
  </NeedDef>

  <HediffDef ParentName="DrugToleranceBase">
    <defName>BlotterTolerance</defName>
    <label>blotter tolerance</label>
    <description>blotter tolerance</description>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.015</severityPerDay>
      </li>
      <li Class="HediffCompProperties_DrugEffectFactor">
        <chemical>Blotter</chemical>
      </li>
    </comps>
		<hediffGivers>
			<li Class="HediffGiver_RandomDrugEffect">
				<hediff>ChemicalDamageModerate</hediff>
				<minSeverity>0.50</minSeverity>
				<baseMtbDays>120</baseMtbDays>
				<partsToAffect>
					<li>Brain</li>
				</partsToAffect>
			</li>
		</hediffGivers>
  </HediffDef>
  
  <HediffDef ParentName="AddictionBase">
    <defName>BlotterAddiction</defName>
    <hediffClass>Hediff_Addiction</hediffClass>
    <label>blotter addiction</label>
    <chemicalNeed>Chemical_Blotter</chemicalNeed>
    <description>A dependence on blotter, as the brutish realities of this year of our lord are too much for one to handle.</description>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.0333</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
      </li>
      <li>
        <label>withdrawal</label>
        <restFallFactorOffset>0.3</restFallFactorOffset>
        <socialFightChanceFactor>2.0</socialFightChanceFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.50</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.25</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.20</offset>
          </li>
        </capMods>
        <mentalStateGivers>
					<li>
						<mentalState>Binging_DrugExtreme</mentalState>
						<mtbDays>40</mtbDays>
					</li>
          <li>
            <mentalState>Wander_Psychotic</mentalState>
            <mtbDays>10</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
    </stages>
  </HediffDef>

  <ThoughtDef>
    <defName>BlotterWithdrawal</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>BlotterAddiction</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <visible>false</visible>
      </li>
      <li>
        <label>blotter withdrawal</label>
        <description>The world is grey again and the memories of the last few days are faded like a frogotten dream.</description>
        <baseMoodEffect>-35</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
    <ThoughtDef>
    <defName>BlotterHigh</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>BlotterHigh</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>tripping</label>
        <description>I'm not sure what's real and what isn't but it's nicer than reality.</description>
        <baseMoodEffect>8</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
</Defs>
