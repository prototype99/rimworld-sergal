<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="DrugBase">
    <defName>Beamers</defName>
    <label>beamers</label>
    <description>Pingers (also known as beamers) are a drug designed to make the user very, very happy, but are easy to overdose on and can also lead to addiction.</description>
    <socialPropernessMatters>true</socialPropernessMatters>
    <tickerType>Rare</tickerType>
    <graphicData>
      <texPath>Things/Item/Drug/Beamers</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>900</WorkToMake>
      <MarketValue>100</MarketValue>
      <Mass>0.1</Mass>
			<DeteriorationRate>4</DeteriorationRate>
      <Nutrition>0.2</Nutrition>
    </statBases>
    <techLevel>Ultra</techLevel>
    <ingestible>
            <foodType>Plant, Processed</foodType>
			<baseIngestTicks>100</baseIngestTicks>
			<chairSearchRadius>4</chairSearchRadius>
      <preferability>DesperateOnly</preferability>
      <joyKind>Chemical</joyKind>
      <joy>1.9</joy>
      <nurseable>true</nurseable>
      <drugCategory>Hard</drugCategory>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>BeamersHigh</hediffDef>
          <severity>0.50</severity>
          <toleranceChemical>Beamers</toleranceChemical>
        </li>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>BeamersTolerance</hediffDef>
          <severity>0.032</severity>
          <divideByBodySize>true</divideByBodySize>
        </li>
      </outcomeDoers>
    </ingestible>
        <recipeMaker>
			<researchPrerequisite>BlotterProduction</researchPrerequisite>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
      <bulkRecipeCount>4</bulkRecipeCount>
    </recipeMaker>
    <costList>
      <Neutroamine>2</Neutroamine>
      <Flake>2</Flake>
      <FrogleafLeaves>2</FrogleafLeaves>
      <Gold>1</Gold>
    </costList>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>30</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
			<li Class="CompProperties_Drug">
				<chemical>Beamers</chemical>
				<addictiveness>0.010</addictiveness>
				<minToleranceToAddict>0.35</minToleranceToAddict>
				<existingAddictionSeverityOffset>0.1</existingAddictionSeverityOffset>
				<needLevelOffset>1</needLevelOffset>
				<listOrder>30</listOrder>
			</li>
		</comps>
  </ThingDef>

  <HediffDef>
    <defName>BeamersHigh</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <description>Everything feels nice and everyone around me is so lovely.</description>
    <label>beaming</label>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.75</severityPerDay>
      </li>
    </comps>
    <stages>
    <li>
                <capMods>
            <li>
              <capacity>Consciousness</capacity>
              <offset>-0.1</offset>
            </li>
            <li>
              <capacity>Moving</capacity>
              <offset>-0.1</offset>
            </li>
          </capMods>
          </li>
    </stages>
  </HediffDef>

  <ThoughtDef>
    <defName>BeamersHigh</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>BeamersHigh</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>beaming</label>
        <description>Everything feels nice and everyone around me is so lovely.</description>
        <baseMoodEffect>50</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!-- Beamers addiction -->
  
  <ChemicalDef>
    <defName>Beamers</defName>
    <label>beamers</label>
    <addictionHediff>BeamersAddiction</addictionHediff>
    <toleranceHediff>BeamersTolerance</toleranceHediff>
    <onGeneratedAddictedToleranceChance>0.8</onGeneratedAddictedToleranceChance>
  </ChemicalDef>
  
  <NeedDef ParentName="DrugAddictionNeedBase">
    <defName>Chemical_Beamers</defName>
    <needClass>Need_Chemical</needClass>
    <label>beamers</label>
    <description>Addiction to beamers is as depressing as their use is uplifting.</description>
    <listPriority>20</listPriority>
  </NeedDef>

  <HediffDef ParentName="DrugToleranceBase">
    <defName>BeamersTolerance</defName>
    <label>beamers tolerance</label>
    <description>artificial happiness tolerance</description>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.010</severityPerDay>
      </li>
      <li Class="HediffCompProperties_DrugEffectFactor">
        <chemical>Beamers</chemical>
      </li>
    </comps>
  </HediffDef>
  
  <HediffDef ParentName="AddictionBase">
    <defName>BeamersAddiction</defName>
    <description>Addiction to beamers is as depressing as their use is uplifting.</description>
    <hediffClass>Hediff_Addiction</hediffClass>
    <label>beamer addiction</label>
    <chemicalNeed>Chemical_Beamers</chemicalNeed>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.1</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
      </li>
      <li>
        <label>withdrawal</label>
      </li>
    </stages>
  </HediffDef>

  <ThoughtDef>
    <defName>BeamersWithdrawal</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>BeamersAddiction</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <visible>false</visible>
      </li>
      <li>
        <label>beamer withdrawal</label>
        <description>I am literally unable to feel happiness anymore... I'm scared, depressed, and struggling to see the point of living.</description>
        <baseMoodEffect>-50</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

</Defs>
