<?xml version="1.0" encoding="utf-8"?>
<Defs> 
 <ThingDef ParentName="BuildingBase">
    <defName>GnollElectricCrematorium</defName>
    <label>Gnoll crematorium</label>
    <description>A decorative, ceremonial place in which the dead are respectfully incinerated.</description>
    <thingClass>Building_WorkTable_HeatPush</thingClass>
    <graphicData>
      <texPath>Things/SGL_Building/crematorium</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(3,2)</drawSize>
      <shadowData>
        <volume>(1.95,0.5,1.3)</volume>
      </shadowData>
      <damageData>
        <rect>(0.3,0.1,2.4,1.8)</rect>
      </damageData>
    </graphicData>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>150</costStuffCount>
    <costList>
      <Steel>20</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <altitudeLayer>Building</altitudeLayer>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>4500</WorkToBuild>
      <MaxHitPoints>300</MaxHitPoints>
      <Cleanliness>-20</Cleanliness>
      <Beauty>-10</Beauty>
    </statBases>
    <size>(3,2)</size>
    <designationCategory>Production</designationCategory>
    <fillPercent>1</fillPercent>
    <passability>Impassable</passability>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <interactionCellIcon>DiningChair</interactionCellIcon>
    <surfaceType>Item</surfaceType>
    <canOverlapZones>false</canOverlapZones>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
    <recipes>
      <li>CremateCorpseGnoll</li>
	  <li>CremateCorpse</li>
      <li>BurnApparel</li>
      <li>BurnDrugs</li>
    </recipes>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>250</basePowerConsumption>
        <shortCircuitInRain>true</shortCircuitInRain>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Glower">
        <glowRadius>6</glowRadius>
        <glowColor>(217,112,33,0)</glowColor>
      </li>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>12</heatPerSecond>
      </li>
    </comps>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
      <heatPerTickWhileWorking>0.32</heatPerTickWhileWorking>
    </building>
    <designationHotKey>Misc5</designationHotKey>
    <researchPrerequisites>
      <li>Electricity</li>
    </researchPrerequisites>
  </ThingDef>
  
</Defs>