<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="MakeableDrugPillBase">
    <defName>Antisick</defName>
    <label>Antisick</label>
    <description>A much more powerful drug for the prevention (and possible healing) of almost all diseases.</description>
    <graphicData>
      <texPath>Things/Item/Drug/Antisick</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <socialPropernessMatters>false</socialPropernessMatters>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>1200</WorkToMake>
      <MarketValue>1300</MarketValue>
      <Mass>0.005</Mass>
      <Flammability>0.7</Flammability>
    </statBases>
    <techLevel>Industrial</techLevel>
    <ingestible>
      <drugCategory>Medical</drugCategory>
      <outcomeDoers>
	<li Class="AufenCode.IngestionOutcomeDoer_RemoveHediff">
		<hediffDef>SleepingSickness</hediffDef>
	</li>
    <li Class="AufenCode.IngestionOutcomeDoer_RemoveHediff">
        <hediffDef>AlcoholAddiction</hediffDef>
	</li>
    <li Class="AufenCode.IngestionOutcomeDoer_RemoveHediff">
        <hediffDef>Malaria</hediffDef>
	</li>
    <li Class="AufenCode.IngestionOutcomeDoer_RemoveHediff">
        <hediffDef>MuscleParasites</hediffDef>
	</li>
    <li Class="AufenCode.IngestionOutcomeDoer_RemoveHediff">
        <hediffDef>GutWorms</hediffDef>
	</li>
    <li Class="AufenCode.IngestionOutcomeDoer_RemoveHediff">
        <hediffDef>Flu</hediffDef>
	</li>
    <li Class="AufenCode.IngestionOutcomeDoer_RemoveHediff">
        <hediffDef>Plague</hediffDef>
	</li>
	<li Class="AufenCode.IngestionOutcomeDoer_RemoveHediff">
		<hediffDef>SmokeleafAddiction</hediffDef>
	</li>
    <li Class="IngestionOutcomeDoer_GiveHediff">
		<hediffDef>AntisickHigh</hediffDef>
	</li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
			<researchPrerequisite>AntisickProduction</researchPrerequisite>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Neutroamine>10</Neutroamine>
      <MedicineUltratech>10</MedicineUltratech>
      <Ambrosia>10</Ambrosia>
    </costList>
    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>1000</listOrder>
        <overdoseSeverityOffset>
          <min>0.08</min>
          <max>0.14</max>
        </overdoseSeverityOffset>
      </li>
    </comps>
  </ThingDef>
  
  <HediffDef>
    <defName>AntisickHigh</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>Antisick</label>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <description>I'm having fever dreams and it's terrifying. This is a bad trip.</description>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.18</severityPerDay>
      </li>
    </comps>
      <stages>
      <li>
          <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.50</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.45</offset>
          </li>
          </capMods>
          </li>
      </stages>
  </HediffDef>
  
    <ThoughtDef>
    <defName>AntisickHigh</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>AntisickHigh</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>high on antisick</label>
        <description>I'm having fever dreams and it's terrifying. This is a bad trip.</description>
        <baseMoodEffect>-15</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
</Defs>
