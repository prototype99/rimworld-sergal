  <RecipeDef ParentName="SurgeryInstallBodyPartArtificialBase">
    <defName>InstallGnollstromSharpshooterEye</defName>
    <label>install sharpshooter eye</label>
    <description>Install a Gnollstrom sharpshooter eye.</description>
    <descriptionHyperlinks>
      <ThingDef>GnollstromBionicEyeTargeterThingDef</ThingDef>
      <HediffDef>GnollstromBionicEyeTargeter</HediffDef>
    </descriptionHyperlinks>
    <jobString>Hacking bionic eye.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>GnollstromBionicEyeTargeterThingDef</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>GnollstromBionicEyeTargeterThingDef</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Eye</li>
    </appliedOnFixedBodyParts>
    <addsHediff>GnollstromBionicEyeTargeter</addsHediff>
  </RecipeDef>
	

