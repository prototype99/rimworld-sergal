  <RecipeDef ParentName="SurgeryInstallImplantBase">
    <defName>InstallGnollstromKevlar</defName>
    <label>install Gnollstrom kevlar body kit</label>
    <description>Install a Gnollstrom kevlar body kit.</description>
    <descriptionHyperlinks><ThingDef>GnollstromKevlar</ThingDef></descriptionHyperlinks>
    <jobString>Installing a Gnollstrom subdermal kevlar kit.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>GnollstromKevlar</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>GnollstromKevlar</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Torso</li>
    </appliedOnFixedBodyParts>
    <addsHediff>GnollstromKevlar</addsHediff>
  </RecipeDef>
  
    <HediffDef ParentName="ImplantHediffBase">
    <defName>GnollstromKevlar</defName>
    <label>Gnollstrom kevlar body kit</label>
    <labelNoun>a Gnollstrom kevlar body kit</labelNoun>
    <description>A Gnollstrom kevlar body kit applied directly to the torso.</description>
    <spawnThingOnRemoved>GnollstromKevlar</spawnThingOnRemoved>
    <stages>
      <li>
        <statOffsets>
          <ArmorRating_Heat>-50</ArmorRating_Heat>
          <ArmorRating_Sharp>500</ArmorRating_Sharp>
        </statOffsets>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_ReactOnDamage">
        <damageDefIncoming>Burn</damageDefIncoming>
        <createHediff>FirePsychosis</createHediff>
      </li>
    </comps>
  </HediffDef>
  
  <HediffDef>
    <defName>FirePsychosis</defName>
    <label>fire psychosis</label>
    <labelNoun>fire psychosis</labelNoun>
    <description>When the user of a gnollstrom kevlar skin mod catches fire, they go berserk and become harder to stop.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>2500~3500</disappearsAfterTicks>
      </li>
	  <li Class="HediffCompProperties_CauseMentalState">
		<humanMentalState>Berserk</humanMentalState>
        <letterDef>NegativeEvent</letterDef>
	  </li>
    </comps>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>2.0</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  
  
</Defs>