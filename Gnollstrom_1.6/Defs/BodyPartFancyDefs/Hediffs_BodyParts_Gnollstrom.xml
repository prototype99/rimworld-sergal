<Defs>

  <!-- Neurocalculator -->


  
    <ThingDef ParentName="BodyPartBionicBase">
    <defName>GnollstromFistya</defName>
    <label>Fistya Unit</label>
    <thingCategories>
	  <li>GnollstromPartsBionic</li>
    </thingCategories>
    <techHediffsTags>
      <li>GnollstromPartsBionic</li>
    </techHediffsTags>
    <description>A Gnollstrom hackjob trying to match the power of the FITEME 2.0. Like most things Gnollstrom, it is more about overwhelming strength than practicality. The user is given less information on incoming attacks and more emphasis on outgoing attacks than in the more traditional FITEME 2.0 unit.</description>
    <descriptionHyperlinks><RecipeDef>InstallGnollstromFistya</RecipeDef></descriptionHyperlinks>
    <graphicData>
      <texPath>Things/Item/Health/HealthItem</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.80</drawSize>
      <color>(199,119,119)</color>
    </graphicData>
    <thingSetMakerTags><li>RewardStandardLowFreq</li></thingSetMakerTags>
    <costList>
      <Plasteel>250</Plasteel>
      <ComponentSpacer>16</ComponentSpacer>
    </costList>
  </ThingDef>

  <RecipeDef ParentName="SurgeryInstallImplantBase">
    <defName>InstallGnollstromFistya</defName>
    <label>install Fistya Unit</label>
    <description>Install a Fistya Unit</description>
    <descriptionHyperlinks><ThingDef>GnollstromFistya</ThingDef></descriptionHyperlinks>
    <jobString>Installing Fistya Unit.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>GnollstromFistya</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>GnollstromFistya</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Brain</li>
    </appliedOnFixedBodyParts>
    <addsHediff>GnollstromFistyaHediff</addsHediff>
  </RecipeDef>
  
    <HediffDef ParentName="ImplantHediffBase">
    <defName>GnollstromFistyaHediff</defName>
    <label>Fistya Unit</label>
    <labelNoun>a Gnollstrom Fistya Unit</labelNoun>
    <description>An installed Gnollstrom Fistya Unit.</description>
    <spawnThingOnRemoved>GnollstromFistya</spawnThingOnRemoved>
    <comps>
      <li Class="HediffCompProperties_GiveAbility">
        <abilityDefs>
          <li>FuryCharge</li>
        </abilityDefs>
      </li>
    </comps>
    <stages>
      <li>
        <statOffsets>
          <MeleeDodgeChance>50</MeleeDodgeChance>
          <MeleeDPS>16</MeleeDPS>
          <MeleeHitChance>60</MeleeHitChance>
          <MeleeWeapon_CooldownMultiplier>-1.4</MeleeWeapon_CooldownMultiplier>
          <ShootingAccuracyPawn>-90</ShootingAccuracyPawn>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>
  
