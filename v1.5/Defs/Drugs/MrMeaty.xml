<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="DrugPillBase">
    <defName>ChungusDrug</defName>
    <label>Chungus</label>
    <description>This is a drug that induces severe swelling of all muscles, thus creating an excess of meat. Unfortunately, it is quite painful for the subject and makes it very, very hard for them to move. Put them out of their misery rather quickly... or wait until they are fully grown for maximum meat harvest. WARNING: This drug is not intended for humanlike use, and is a permanent condition.</description>
    <graphicData>
      <texPath>Things/Item/Drug/ChungusDrug</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <statBases>
      <MarketValue>420</MarketValue>
      <WorkToMake>1200</WorkToMake>
      <Mass>0.01</Mass>
    </statBases>
    <recipeMaker>
        <researchPrerequisite>ChungusProduction</researchPrerequisite>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
        <Chemfuel>4</Chemfuel>
        <Neutroamine>2</Neutroamine>
        <Meat_Alien_Frog>4</Meat_Alien_Frog>
    </costList>
    <techLevel>Ultra</techLevel>
    <ingestible>
      <drugCategory>Medical</drugCategory>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>ChungusDrugHigh</hediffDef>
          <severity>0</severity>
          <doToGeneratedPawnIfAddicted>true</doToGeneratedPawnIfAddicted>
        </li>
      </outcomeDoers>
    </ingestible>
    <comps>
      <li Class="CompProperties_Drug">
        <chemical>ChungusDrug</chemical>
        <addictiveness>0</addictiveness>
        <needLevelOffset>0</needLevelOffset>
        <listOrder>1010</listOrder>
      </li>
    </comps>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
  </ThingDef>

